---
const { imgPath, body, body2, number } = Astro.props;
import "../styles/style.css";
---

<div class="container">
<section>
    <div class="text">
	    <div class="indhold_text">
	       <div class="image">
				<img src={imgPath} alt="SVG">
	       </div> 
			<h3>{body}</h3>
	        <h3>{body2}</h3>
	    </div>
	    <div class="nummer">
	        <h2>{number}</h2>
	    </div>
    </div>
</section>
</div>


<style>
img{
	width: 40px;
	height: auto;
}

.image{
	display: flex;
	justify-content: center;
	padding-bottom: 1rem;
}
.container{
		padding-top: 5%;
	}

	section{
		background-color: var(--primary);
        padding: 10% 0% 10% 0%;
        border-radius: 0px 0px 0px 50px;
        margin-left: 40px;
		color: var(--off-white);
	}

	h3{
		padding-bottom: 0.5rem;
	}
	.text{
		display: flex;
		justify-content: space-between;
	}
    .indhold_text {
		font-size: var(--text_s);
        padding-left: 15%;
    }

	.nummer{
		display: flex;
		position: absolute;
		text-align: center;
		z-index: 1;
        translate: -40% 0%;
	}
	.nummer h2 {
		background-color: var(--contrast);
		border-radius: 50%;
		padding: 20% 0% 0% 0%;
		height: 50px;
		width: 50px;
	}

@media (min-width: 800px){
	section{
        padding: 3% 0% 3% 0%;
        border-radius: 0px 0px 0px 50px;
        margin-left: 25%;
	}
	img{
	width: 60px;
	height: auto;
	}
	.indhold_text{
		font-size: 2rem;
        padding-left: 29%;

	}
.nummer{
		margin-top: 1%;
	}
	.nummer h2 {
		padding: 20% 0% 0% 0%;
		height: 100px;
		width: 100px;
		font-size: 3rem;
	}
	}
</style>