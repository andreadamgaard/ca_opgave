---
const { imgPath, body, body2, number } = Astro.props;
import "../styles/style.css";
---
<div class="container">
<section>
	<div class="text">
		<div class="indhold_text">
	       <div class="image">
			<img src={imgPath} alt="SVG">
		   </div>
			<h3>{body}</h3>
			<h3>{body2}</h3>
		</div>
		<div class="nummer">
			<h2>{number}</h2>
		</div>
	</div>
</section>
</div>
<style>
img{
	width: 40px;
	height: auto;
}

.image{
	display: flex;
	justify-content: center;
	padding-bottom: 1rem;
}
	.container{
		padding-top: 5%;
	}
	section{
		background-color: var(--primary);
		padding: 10% 0% 10% 8%;
		border-radius: 0px 0px 50px;
		margin-right: 40px;
		color: var(--off-white);
	}

	.text{
		display: flex;
		justify-content: space-between;
	}

	.indhold_text{
		font-size: var(--text_s);
	}

	h3{
		padding-bottom: 0.5rem;
	}

	.nummer{
		display: flex;
		position: absolute;
		text-align: center;
		z-index: 1;
		margin-left: 74%;
	}
	.nummer h2 {
		background-color: var(--contrast);
		border-radius: 50%;
		padding: 20% 0% 0% 0%;
		height: 50px;
		width: 50px;
	}

	@media (min-width: 800px){
	img{
	width: 60px;
	height: auto;
	}
	section{
		padding: 3% 0% 3% 8%;
		border-radius: 0px 0px 50px;
		margin-right: 25%;
	}
	.indhold_text{
		font-size: 2rem;
	}
	.nummer{
		margin-left: 64%;
		margin-top: 1%;
	}
	.nummer h2 {
		padding: 20% 0% 0% 0%;
		height: 100px;
		width: 100px;
		font-size: 3rem;
	}
	}
</style>